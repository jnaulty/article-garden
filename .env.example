# Private Publishing Platform - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# PACKAGE CONFIGURATION
# ============================================
# Deployed Move package ID (get this after running `sui client publish`)
PACKAGE_ID=0x0

# ============================================
# NETWORK CONFIGURATION
# ============================================
# Network to connect to: localnet | devnet | testnet | mainnet
NETWORK=localnet

# ============================================
# RPC ENDPOINTS (Optional - defaults provided)
# ============================================
# Localnet RPC URL (default: http://localhost:9000)
# RPC_URL_LOCALNET=http://localhost:9000

# Devnet RPC URL
# RPC_URL_DEVNET=https://fullnode.devnet.sui.io

# Testnet RPC URL
# RPC_URL_TESTNET=https://fullnode.testnet.sui.io

# Mainnet RPC URL
# RPC_URL_MAINNET=https://fullnode.mainnet.sui.io

# ============================================
# FAUCET (Localnet only)
# ============================================
# FAUCET_URL=http://localhost:9123

# ============================================
# DEVELOPMENT
# ============================================
# Enable debug mode
# DEBUG=true

# Hot reload
# VITE_HMR=true

# ============================================
# LOGGING
# ============================================
# Log level: debug | info | warn | error
# Use 'debug' in development, 'info' in production
VITE_LOG_LEVEL=debug
